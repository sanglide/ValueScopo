{
"$schema": "http://json-schema.org/draft-07/schema#",
"type": "object",
"required": ["value_summary","suggested_fixes","reviewer_requests","overall_confidence","summary_text"],
"properties": {
"value_summary": {
"type": "object",
"additionalProperties": {
"type": "object",
"required": ["score","top_evidences"],
"properties": {
"score": {"type":"number","minimum":0,"maximum":1},
"top_evidences": {"type":"array","items":{"type":"string"}}
}
}
},
"suggested_fixes": {
"type":"array",
"items": {"type":"object","required":["fix","impact","effort","evidence"],"properties": {"fix":{"type":"string"},"impact":{"type":"string"},"effort":{"type":"string"},"evidence":{"type":"array","items":{"type":"string"}}}}
},
"reviewer_requests": {"type":"array","items":{"type":"string"}},
"overall_confidence": {"type":"number","minimum":0,"maximum":1},
"summary_text": {"type":"string"}
}
}